{
  "extends": [
    "config:base"
  ],
  "timezone": "Asia/Tokyo",
  "schedule": [
    "every weekday"
  ],
  "baseBranches": [
    "develop"
  ],
  "labels": [
    "renovate"
  ],
  "patch": {
    "automerge": true
  },
  "packageRules": [
    {
      "depTypeList": [
        "devDependencies"
      ],
      "minor": {
        "automerge": true
      }
    },
    {
      "groupName": "linters",
      "extends": [
        "packages:linters"
      ],
      "minor": {
        "automerge": true
      }
    }
  ]
}
